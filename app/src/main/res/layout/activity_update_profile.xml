<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syafikha.e_baebishita.updateProfile"
    android:background="@drawable/cubaan">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="41dp"
        android:text="Name" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@+id/edtName"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/edtName"
        android:layout_alignStart="@+id/edtName"
        android:layout_alignRight="@+id/edtName"
        android:layout_alignEnd="@+id/edtName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/edtPhone"
        android:layout_marginTop="36dp"
        android:text="Password" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtPhone"
        android:layout_alignLeft="@+id/edtPhone"
        android:layout_alignRight="@+id/edtPhone"
        android:layout_alignStart="@+id/edtPhone"
        android:layout_below="@+id/edtPhone"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="32dp"
        android:text="Address" />

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtPassword"
        android:layout_alignLeft="@+id/edtPassword"
        android:layout_alignRight="@+id/edtPassword"
        android:layout_alignStart="@+id/edtPassword"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/btnUpdate2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/edtReligion"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnBackUpdateProfile"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnUpdate2"
        android:layout_alignStart="@+id/btnUpdate2"
        android:layout_below="@+id/btnUpdate2"
        android:layout_marginTop="16dp"
        android:text="Back" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/edtAddress"
        android:layout_marginTop="17dp"
        android:text="Religion" />

    <EditText
        android:id="@+id/edtReligion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtAddress"
        android:layout_alignLeft="@+id/edtAddress"
        android:layout_alignRight="@+id/edtAddress"
        android:layout_alignStart="@+id/edtAddress"
        android:layout_alignTop="@+id/textView18"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>
